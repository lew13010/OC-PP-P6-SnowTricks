{% extends 'LewSTBundle::layout.html.twig' %}

{% block body %}
    {% block fos_user_content %}
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path("fos_user_security_check") }}" method="post" class="col-sm-4 col-sm-offset-4">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <div class="form-group">
                <label for="username">Login</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control"/>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="_password" required="required" class="form-control"/>
            </div>

            <div class="form-group">
                <label>
                <input type="checkbox" id="remember_me" name="_remember_me" value="on"/> Se souvenir de moi
                </label>
            </div>

            <input type="submit" id="_submit" name="_submit" value="Valider" class="btn btn-success pull-right"/>
        </form>
    {% endblock fos_user_content %}
{% endblock %}